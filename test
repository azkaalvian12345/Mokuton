import tkinter as tk
from time import strftime
import math

def update_time():
    # Update digital time
    digital_time = strftime('%H:%M:%S %p')
    digital_label.config(text=digital_time)

    # Update analog clock
    current_time = strftime('%H:%M:%S').split(':')
    hour = int(current_time[0]) % 12
    minute = int(current_time[1])
    second = int(current_time[2])

    hour_angle = math.radians((hour * 30) + (0.5 * minute))
    minute_angle = math.radians((minute * 6) + (0.1 * second))
    second_angle = math.radians(second * 6)

    # Coordinates for the clock hands
    hour_x = 150 + 50 * math.cos(hour_angle)
    hour_y = 150 - 50 * math.sin(hour_angle)
    minute_x = 150 + 70 * math.cos(minute_angle)
    minute_y = 150 - 70 * math.sin(minute_angle)
    second_x = 150 + 90 * math.cos(second_angle)
    second_y = 150 - 90 * math.sin(second_angle)

    # Clear previous drawings
    canvas.delete("all")

    # Draw clock hands
    canvas.create_line(150, 150, hour_x, hour_y, width=8, fill="blue")
    canvas.create_line(150, 150, minute_x, minute_y, width=4, fill="green")
    canvas.create_line(150, 150, second_x, second_y, width=2, fill="red")

    # Call update_time function after 1 second
    root.after(1000, update_time)

# Create the main window
root = tk.Tk()
root.title("Digital and Analog Clock")

# Digital Clock
digital_label = tk.Label(root, font=('calibri', 40, 'bold'), background='black', foreground='white')
digital_label.pack(anchor='center')

# Analog Clock
canvas = tk.Canvas(root, width=300, height=300, bg='white')
canvas.pack()

# Call the update_time function to start the clock
update_time()

# Run the main loop
root.mainloop()
